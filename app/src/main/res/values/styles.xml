<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SensibleDefaultsMaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">@dimen/mtrl_card_spacing</item>
        <item name="android:layout_marginRight">@dimen/mtrl_card_spacing</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:minHeight">200dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
